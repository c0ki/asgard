{% extends "CoreLayoutBundle::layout.html.twig" %}

{% block favicon %}
    {% if app.attributes._site|default == 'admin' %}
        <link rel="shortcut icon" href="/asgard-light.png" type="image/png" sizes="16x16 24x24 32x32 64x64 128x128"/>
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block head_css %}
    {{ parent() }}
    {% stylesheets
    'bundles/coreadmin/css/admin.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{%- block bodyclass -%}
    {{ parent() }}
    {%- if app.attributes._site|default -%}
        {{ ' site-' ~ app.attributes._site }}
    {%- endif -%}
{%- endblock -%}

{% block header_content %}
    {{ parent() }}
    <div class="logo-admin flex-item-last{% if app.attributes._site|default == 'admin' %} selected{% endif %}">
        {% if app.attributes._site|default != 'admin' %}
            <a href="{{ path('core_layout_root', {'_site': 'admin'}) }}"
               class="icon-pref-alt icon-only">Back</a>
        {% else %}
            <a href="{{ path('core_layout_root', {'_site': null}) }}"
               class="icon-pref-alt icon-only">Front</a>
        {% endif %}
    </div>
{% endblock %}