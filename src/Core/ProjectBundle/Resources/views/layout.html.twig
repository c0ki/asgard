{% extends app.layout(_self) %}

{% block head_css %}
    {{ parent() }}
    {% stylesheets
    'bundles/coreproject/css/project.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
    {% if app.siteaccess == 'admin' %}
        {% stylesheets
        'bundles/coreproject/css/project-admin.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endif %}
{% endblock %}

{% block header_navbar %}
    {% include 'CoreProjectBundle:Default:projects_list.html.twig' with {'route': 'core_project_project', 'nofilter': true} only %}
    {{ parent() }}
{% endblock %}

{% block tools_navbar %}
    {% include 'CoreProjectBundle:Default:domains_list.html.twig' with {'select': true} only %}
    {{ parent() }}
{% endblock %}