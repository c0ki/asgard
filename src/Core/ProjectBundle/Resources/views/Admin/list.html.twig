{% extends 'CoreProjectBundle::layout.html.twig' %}

{% block content %}
    {% block projects %}
        <section id="default-projectlist">
            <h2>Projects list</h2>
            <ul>
                <li class="icon-new">
                    <a href="{{ path('core_project_admin_project_add') }}">Add project</a>
                </li>
                {% for project in projects %}
                    <li class="icon-{{ project.logo|default('no') }}">
                        <a href="{{ path('core_project_admin_project_edit', {'@project': project.name}) }}">{{ project.label }}</a>
                        {% if project.domains.count > 0 %}
                            [{{ project.domains.count }} domain{% if project.domains.count > 1 %}s{% endif %}]
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endblock %}

    {% block domains %}
        <section id="default-domainlist">
            <h2>Domains list</h2>
            <ul>
                <li class="icon-new">
                    <a href="{{ path('core_project_admin_domain_add') }}">Add domain</a>
                </li>
                {% for domain in domains %}
                    <li class="icon-{{ domain.logo|default('no') }}">
                        <a href="{{ path('core_project_admin_domain_edit', {'@domain': domain.name}) }}">{{ domain.label }}</a>
                        {% if domain.projects.count > 0 %}
                            [{{ domain.projects.count }} project{% if domain.projects.count > 1 %}s{% endif %}]
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </section>
    {% endblock %}
{% endblock %}