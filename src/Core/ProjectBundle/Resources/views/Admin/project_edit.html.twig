{% extends app.layout(_self) %}

{% block content %}
    <section id="project-edit">
        <h2>Project {% if edit_mode %}edition{% else %}creation{% endif %}</h2>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="button_row">
            <button type="reset" class="icon-error icon-only">Reset</button>
            <button type="submit" class="icon-success icon-only">Submit</button>
        </div>
        {{ form_end(form) }}
    </section>

    {% if not app.isPopin %}
        <section class="list">
            <h3>Projects</h3>
            {% include 'CoreProjectBundle:Admin:projects_list.html.twig' with {} only %}
        </section>
    {% endif %}
{% endblock %}
