{% extends app.layouttheme %}

{% block head_css %}
    {{ parent() }}
    {% stylesheets
    'bundles/logtracker/css/results.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <section id="logtracker">
        <h2>Log Tracker</h2>
        {% if not results.success or results.numFound == 0 %}
            <div>No results</div>
        {% else %}
            <section id="logtracker-results">
                {% for result in results.results %}
                    <article>{% include 'LogTrackerBundle:Default:result.html.twig' with {'result': result} only %}</article>
                {% endfor %}
            </section>

            <aside>
                <section id="logtracker-facets">
                    {% for name, values in results.facets if values|length > 0 %}
                        {% include 'LogTrackerBundle:Default:facet.html.twig' with {'name': name, 'values': values} only %}
                    {% endfor %}
                </section>
            </aside>

            {% include 'LogTrackerBundle:Default:pager.html.twig' with {'founds': results.numFound, 'rows': results.numRows, 'start': results.numStart|default, 'page': page|default} only %}
        {% endif %}

        {{ dump(results) }}
    </section>
{% endblock %}
